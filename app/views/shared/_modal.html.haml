.modal-dialog
  .modal-content
    .modal-header
      %button{type: "button", class: "close", data: {dismiss: "modal"}} &times;
      %h4.modal-title= title
    .modal-body
      = render partial: partial_name
    - unless options[:ignore_footer]
      .modal-footer
        =link_to(t('buttons.cancel'), "#", class: "btn btn-danger", data: {dismiss: "modal"})
        =link_to(t('buttons.do_it'), button_ok, class: "btn btn-success modal-submit", data: {target: "modal-target"})

:javascript
  $(document).ready(function() {
    $('[data-dismiss="modal"]').on('click',function(e){
      $("#ajaxModal").detach();
    });
    
    if ($(".modal-dialog").parent().hasClass("new_jingle_modal")) {
      $('.modal-submit').addClass("disabled");
    }
  });