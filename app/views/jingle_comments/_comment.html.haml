%article.comment-item.comment-reply{id: "comment_#{comment.id}"}
  = link_to(image_tag(comment.user.avatar(:small), alt: "", class: "img-circle"), profile_path(comment.user.username), class: "thumb-sm pull-left")
  %span.arrow.left
  %section.comment-body.panel.panel.text-sm
    .panel-body
      %strong= link_to(comment.user.display_name, profile_path(comment.user.username))
      
      = comment.desc
      
      %span.text-muted.m-l-sm.pull-right.date
        %o.icon-time
        = show_time(comment.created_at)